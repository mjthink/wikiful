<h1>Articles</h1>
 <% @articles.each do |article| %>
    <h2><%= link_to article.title, article %>  <small> Published on <%= article.created_at.strftime('%b, %d, %Y') %> </small></h2>
      <p>Filed Under : <% article.categories.each do |category| %>
            <%= category.name %>
      <% end %> </p>
      <p> <%= truncate(article.content, length: 200) %> </p>
 <% end %>



